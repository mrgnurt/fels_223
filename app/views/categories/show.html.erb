<% provide :title, @category.name %>

<h1 class="category-name"><%= link_to @category.name, @category%></h1>
<div class="course-list">
  <% @courses.each_with_index do |course, index| %>
    <% if index.even? %>
      <%= render "courses/course_item1", course: course %>
    <% else %>
      <%= render "courses/course_item2", course: course %>
    <% end %>
  <% end %>
</div>
<%= will_paginate @courses %>
