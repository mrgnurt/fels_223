<% provide :title, t("home") %>

<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <div class="row">
        <section class="user_info">
          <%= render "shared/user_info", user: current_user %>
        </section>
      </div>
      <div class="row">
        <section class="stats">
          <%= render "shared/stats", user: @user,
            destroy: @relationship_destroy, build: @relationship_build %>
        </section>
      </div>
    </aside>
      <div class="col-md-3">
        <%= link_to t("my_words"), wordlist_filters_path(current_user),
          class: "btn btn-primary home-button" %>
      </div>
      <div class="col-md-3 col-md-offset-1">
        <%= link_to t("my_lessons"), user_lessons_path(current_user),
          class: "btn btn-primary home-button" %>
      </div>
    </div>
<% else %>
  <h1><%= t "wellcome" %></h1>
<% end %>
